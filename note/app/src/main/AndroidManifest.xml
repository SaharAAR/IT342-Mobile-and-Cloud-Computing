<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.note.app">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/appTheme">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="Your Notes"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AddNoteActivity"
            android:exported="true"
            android:label="Add New Note"
            android:screenOrientation="portrait"
            android:theme="@style/AddNoteActivityTheme" />

        <activity
            android:name=".activities.NoteViewActivity"
            android:exported="true"
            android:label="Edit Note"
            android:screenOrientation="portrait"
            android:theme="@style/NoteViewActivityTheme" />

    </application>

</manifest>